<%- include('./partials/head') %>


<section class="container">

  <header class="header-title">
    <h1 id="OurTribe-title">Our Tribe</h1>
  </header>

  <section class="squads">
    
  <% squads.forEach(squad => { %> <!-- Voor elke squad in de 'squads' array -->
  <div class="cirkel" id="<%= squad.name %>">  <!-- Maak een div-element met de class 'cirkel' en de ID gelijk aan de naam van de squad -->
    <h2> Squad <%= squad.name %></h2> <!-- Voeg de naam van de squad toe als tekst binnen de h2 -->
  </div>
<% }) %>
    <div class="paint-splash1">
      <img class="img-paint-splash1" src="/images/paint-splash-1.svg" alt="paint-splash">
    </div>
    <div class="paint-splash2">
      <img class="img-paint-splash1" src="/images/paint-splash-1.svg" alt="paint-splash">
    </div>
    <div class="paint-splash3">
      <img class="img-paint-splash1" src="/images/paint-splash-1.svg" alt="paint-splash">
    </div>

   </section>
 
<section>
  <h2>Students</h2>
  <ul class="ul-personen">

    <% persons.forEach(person => { %> <!-- Voor elke student in de 'persons' array -->
      <li class="li-persoon-item" >
        <h2><%= person.name %></h2>
        <section class="person-info">
          <h3 class="person-nickname"><%= person.surname %></h3>
        </section>
      </li> <!-- link naar de student met hun naam -->
    <% }) %>
  </ul>
</section>
</section>

<%- include('./partials/foot') %>